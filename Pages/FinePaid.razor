@page "/finepaid"

@inject NavigationManager NavigationManager;

<PageTitle>No Payment</PageTitle>

   <div class="row">
        <div class="col py-3">
            <h1>Nothing to pay</h1>
        </div>
    </div>

    <div class="row">
        <div class="col">
            This fine has already been paid.
        </div>
    </div>

    <div class="form-group row justify-content-start py-3">
        <div class="col">
            <div class="d-flex" style="max-width: 592px">
                <button class="btn btn-primary btn-lg form-control" @onclick=GoBack>Return to Home Page</button>            
            </div>
