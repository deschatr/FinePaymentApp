@page "/"
@inject NavigationManager NavigationManager

<PageTitle>TVLicensefine</PageTitle>


<h1>TV License Fine Payment</h1>
<br><br>
<h3>This is a page to pay your Northern Ireland TV license fine.</h3>
<br><br>

<div class="container-fluid" > <!-- "col-8 offset -1" -->
    <div class="form-group row">
        <div class="col-12">
            <button class="btn btn-primary form-control btn-lg p-3 my-3" style="max-width: 592px" @onclick ="GoTo" id="right-panel-link">
                Pay Online
            </button>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-12">
            <button class="btn btn-secondary form-control btn-lg p-3 my-3" style="max-width: 592px" @onclick ="PostPay" id="right-panel-link" >
                Pay by Post
            </button>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-12">
            <button class="btn btn-primary form-control btn-lg p-3 my-3" style="max-width: 592px" @onclick ="PhonePay" id="right-panel-link" >
                Pay by Phone
            </button>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-12">
            <button class="btn btn-secondary form-control btn-lg p-3 my-3" style="max-width: 592px" @onclick ="CashPay" id="right-panel-link" >
                Pay in Cash
            </button>
        </div>
    </div>
</div>

@code {
    
    
    private void GoTo()
    {
        NavigationManager.NavigateTo("finedetails", true); 
    }
    private void PhonePay()
    {
        NavigationManager.NavigateTo("phonepayment", true); 
    }
    private void PostPay()
    {
        NavigationManager.NavigateTo("postalpayment", true); 
    }
    private void CashPay()
    {
        NavigationManager.NavigateTo("cashpayment", true); 
    }
}
